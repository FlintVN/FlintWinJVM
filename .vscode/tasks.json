{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "group": {
                "kind": "build"
            },
        },
        {
            "label": "build",
            "type": "shell",
            "dependsOn": ["clean"],
            "dependsOrder": "sequence",
            "command": "make",
            "args": ["-j${env:NUMBER_OF_PROCESSORS}"],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}